<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/xzgame_auth_rootlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/xzgame_auth_logolayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/xzgame_auth_logo"
            android:layout_width="150dp"
            android:layout_height="49dp"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:id="@+id/xzgame_auth_tiplayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/xzgame_auth_tip1"
                android:layout_width="7dp"
                android:layout_height="7dp"/>


            <ImageView
                android:id="@+id/xzgame_auth_tip2"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="7dp"/>


            <ImageView
                android:id="@+id/xzgame_auth_tip3"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="7dp"/>


            <ImageView
                android:id="@+id/xzgame_auth_tip4"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="7dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/xzgame_auth_tiplayout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/xzgame_auth_bottom_tip1"
            android:layout_width="7dp"
            android:layout_height="7dp"/>


        <ImageView
            android:id="@+id/xzgame_auth_bottom_tip2"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="7dp"/>


        <ImageView
            android:id="@+id/xzgame_auth_bottom_tip3"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="7dp"/>


        <ImageView
            android:id="@+id/xzgame_auth_bottom_tip4"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="7dp"/>

    </LinearLayout>


</RelativeLayout>