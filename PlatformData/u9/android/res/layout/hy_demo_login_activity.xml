<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hy_demo_activity_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/hy_dialog_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="自定义账号登录"
            android:textColor="#000000"
            android:textSize="22sp" />
    </RelativeLayout>

    <com.hy.game.demo.HYGame_EditText
        android:id="@+id/hy_demo_edit_user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hy_dialog_title_layout"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/hy_demo_edittext_bg"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@."
        android:drawableLeft="@drawable/hy_demo_account_login"
        android:drawablePadding="10dp"
        android:hint="请输入登录账号"
        android:inputType="textPhonetic"
        android:paddingBottom="4dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textSize="16.0sp" />

    <Button
        android:id="@+id/hy_demo_login_btn"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hy_demo_edit_user"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/hy_demo_login_btn_bg"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:textSize="19sp" />
    <View 
        android:layout_marginTop="20dp"
        android:layout_below="@id/hy_demo_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        />

    <ImageView
        android:id="@+id/hy_demo_login_account_more_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:visibility="gone"
        android:layout_alignBottom="@+id/hy_demo_edit_user"
        android:layout_alignRight="@+id/hy_demo_edit_user"
        android:layout_alignTop="@+id/hy_demo_edit_user"
        android:background="@drawable/hy_demo_edittext_bg"
        android:padding="10dp"
        android:src="@drawable/hy_demo_account_more" />

</RelativeLayout>