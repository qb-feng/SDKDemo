<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.goldautumn.sdk.dialog.UserCenterDialog" >

    <RelativeLayout
        android:layout_width="290dip"
        android:layout_height="260dip"
        android:layout_centerInParent="true"
        android:background="@drawable/gasdk_login_rel" >

        <LinearLayout
            android:id="@+id/forgot_lin"
            android:layout_width="260dip"
            android:layout_height="44dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/forgot_imagebutton_1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/gasdk_login_beck" />

                    <View
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="2" />
                </LinearLayout>

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="4" />
            </LinearLayout>

            <TextView
                style="@style/text_registered_title"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:text="@string/text_login_forgotpassword" />

            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forgot_edit_lin_1"
            android:layout_width="260dip"
            android:layout_height="44dip"
            android:layout_below="@+id/forgot_lin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:background="@drawable/gasdk_edit_rel"
            android:orientation="horizontal" >

            <TextView
                style="@style/text_login_text"
                android:layout_marginLeft="5dip"
                android:text="@string/login_text_1" />

            <EditText
                android:id="@+id/login_username"
                style="@style/text_username_edit"
                android:layout_width="118dp"
                android:layout_marginLeft="5dip"
                android:hint="@string/text_forgot_5" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/forgot_button_1"
                style="@style/text_welcome_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dip"
                android:background="@drawable/gasdk_button3_rel"
                android:gravity="center"
                android:text="@string/text_forgot_1" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/forgot_re"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/forgot_edit_lin_1"
            android:layout_alignRight="@+id/forgot_edit_lin_1"
            android:layout_below="@+id/forgot_edit_lin_1" >

            <TextView
                style="@style/text_registered_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="@string/text_forgot_2" />

            <EditText
                android:id="@+id/forgot_text_phone_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/forgot_img"
                android:layout_alignLeft="@+id/forgot_button_2"
                android:layout_alignRight="@+id/forgot_button_2"
                android:hint="@string/text_forgot_9"
                android:inputType="phone"
                android:textColor="@color/login_edit_text_2"
                android:textColorHint="@color/login_edit_text_2"
                android:textSize="16sp" />

            <Button
                android:id="@+id/forgot_button_2"
                style="@style/text_welcome_white"
                android:layout_width="260dip"
                android:layout_height="44dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dip"
                android:gravity="center"
                android:text="@string/text_forgot_4" />

            <ImageView
                android:id="@+id/forgot_img"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_above="@+id/forgot_button_2"
                android:layout_alignLeft="@+id/forgot_button_2"
                android:layout_marginBottom="5dip"
                android:src="@drawable/gasdk_nick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/forgot_img"
                android:layout_alignTop="@+id/forgot_img"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@+id/forgot_img"
                android:gravity="center"
                android:text="@string/text_forgot_3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/forgot_text_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/forgot_img"
                android:layout_alignRight="@+id/forgot_button_2"
                android:layout_alignTop="@+id/forgot_img"
                android:layout_marginLeft="3dip"
                android:gravity="center"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>